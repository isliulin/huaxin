    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="gbpe.policeass.Activity.MyTestActivity">

    <gbpe.policeass.utils.CameraSurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:onClick="startAndStop2"
        android:id="@+id/cpu"
        android:text="显示cpu"
        android:layout_width="wrap_content"
