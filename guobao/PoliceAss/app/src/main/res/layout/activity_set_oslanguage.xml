<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    tools:context=".SetOSLanguage">
    <include
        android:layout_marginLeft="5dp"
        android:id="@+id/title"
        layout="@layout/titlebar"
        android:layout_height="31dp"
        android:layout_width="match_parent" />
    <RelativeLayout
        android:id="@+id/rl_chinese"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="@string/simplified_chinese"
            android:textSize="@dimen/textSize"
            android:id="@+id/tv_Chinese"
            android:textColor="#ea7500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
             android:id="@+id/iv_chinese"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:src="@drawable/duihao"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View

        android:background="#c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/rl_english"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/tv_english"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/english"
            android:textSize="@dimen/textSize"
            android:textColor="#ea7500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_english"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/duihao"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
         android:background="#c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
